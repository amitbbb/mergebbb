<div class="page_section">
    <div class="page_content">
       <div class="about_text_box">
       <div class="about_text_left">
        <h1>{{section.settings.heading}}</h1>
        </div>
        <div class="about_text_right">
            <h2>{{section.settings.subheading}}</h2>
            {{section.settings.description}}
        </div>  
  </div>

</div>

</div>

{% schema %}
{
  "name": "About Slider",
  "settings": [
  {
    "type": "text",
    "id": "heading",
    "label": "Heading"
  },
  {
    "type": "text",
    "id": "subheading",
    "label": "Sub Heading"
  },
  {
    "type": "richtext",
    "id": "description",
    "label": "Description"
  }
  ],

"presets":[
 {
  "name": "About Text"
 }
]
}
{% endschema %}